schema {
    query: Query
    mutation: Mutation
}

type Query {
    allBooks: [Book]
    book(id: String!): Book
    allLoans: [Loan]
}

type Mutation {
  createBook(name: String!, genre: String!): Book
}

type Book {
    id: ID!
    name: String!
    genre: String
}

type Loan {
    id: ID!
    customer: String!
    type: String
    status: String
}
